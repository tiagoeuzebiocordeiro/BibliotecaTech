@model IEnumerable<EditoraModel> // Aqui eu pego o esqueleto (meu modelo para a view)]

@{
    ViewData["title"] = "Lista de editoras";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Editoras</h1>
        <a class="btn btn-success mx-2" asp-controller="Editora" asp-action="Create">Cadastrar nova editora</a>
    </div>
    <div class="table-responsive">
    <table class="table table-sm table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome da Editora</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        
            @if(Model != null)
            {
                @foreach(var editora in Model)
                {
                    <tr>
                        <td>@editora.Id</td>
                        <td>@editora.Nome</td>
                        <td>
                            <a class="btn btn-warning mx-2" asp-controller="Editora" asp-route-id="@editora.Id" asp-action="Update">Editar</a>
                        </td>
                        <td>
                                <a class="btn btn-danger mx-2" asp-controller="Editora" asp-route-id="@editora.Id" asp-action="Delete">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    </div>
</div>
